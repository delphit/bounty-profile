DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
if [ "$(uname)" == "Darwin" ]; then
    DIR=$(cd "$(dirname "$0")"; pwd)
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
  DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
fi

source $DIR/profiles/.aws-cli
source $DIR/profiles/.bucket
source $DIR/profiles/.cert-subdomain
source $DIR/profiles/.github
source $DIR/profiles/.link-scanner
source $DIR/profiles/.scanner
source $DIR/profiles/.screenshot
source $DIR/profiles/.subdomain
source $DIR/profiles/.takeover
source $DIR/profiles/.vhost
source $DIR/profiles/.keys
source $DIR/profiles/.common



