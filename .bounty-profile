    echo "04 - bucket"
    echo "05 - screenshot"
    echo "06 - github"
    echo "07 - scanner"
    echo "08 - link-scanner"
    echo "09 - takeover"
    echo "10 - aws-cli"
    echo "11 - cert-subdomain"
}


#---------------------------------------
bt(){
  cd ~/zk-scripts/bounty-tools
  pull -i
  src
}

bp(){
